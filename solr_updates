#
# Monitors updates being passed to the /update query handler
#

import httplib, sys
from lxml import etree

if sys.argv[-1] == 'config':
	print "graph_title Solr Updates"
	print "graph_args -l 0"
	print "graph_vlabel ups"
	print "graph_category search"
	print "ups.label Updates per second"
else:
	conn = httplib.HTTPConnection("localhost:8080")
	conn.request("GET", "/solr/admin/stats.jsp")
	res = conn.getresponse()

	if res.status == 200:
		data = res.read()

		root = etree.fromstring(data)
		core = root.xpath('/solr/solr-info/QUERYHANDLER')

		for entry in core[0].xpath('entry'):
			if entry[0].text.strip() == '/update':
				stats = entry.xpath('stats')
				for stat in stats[0]:
					if stat.get("name") == 'avgRequestsPerSecond':
						print "ups.value", stat.text.strip()
